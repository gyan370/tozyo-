<div class="title">新規投稿</di>
<% if @reviw.errors.any? %>
  <%= @reviw.errors.count %>件のエラーが発生しました
  <ul>
    <% @reviw.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @reviw do |f| %>

  <h4>城名</h4>
  <%= f.text_field :castle %>
  
  <h4>店名</h4>
  <%= f.text_field :store %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>
	
  <h4>本文</h4>
  <%= f.text_area :introduction%>

<div id="star"></div>

<script>
 $(document).on('turbolinks:load', function() {
    const elem = document.querySelector('#star');
    elem.innerHTML = "";
    const opt = {  
      starOn: "<%= asset_path('star-on.png') %>",
      starOff: "<%= asset_path('star-off.png') %>",
      starHalf: "<%= asset_path('star-half.png') %>",
      scoreName: "reviw[star]",
    };
    raty(elem, opt);
 });
</script>
	
	  <%= f.submit '投稿' %>
<% end %>