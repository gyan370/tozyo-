<div class="row">
  <div class="col-md-6 offset-md-3">
    <h1 class="mt-4">編集画面</h1>
    <%= form_with model: @reviw do |f| %>
      <%= render 'reviws/form', f: f %>
      
      <div class="mb-2">
        <%= f.submit '更新', class: "btn btn-primary" %>
        <%= link_to "Show", reviw_path(@reviw), class: "btn btn-primary"  %>
        <%= link_to "Back", reviws_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>